@model List<Catagory>
@{
    int count = 0;
}
<h1 class="h3 mb-2 text-gray-800">Category</h1>
<p class="mb-4">
    DataTables is a third party plugin that is used to generate the demo table below.
    For more information about DataTables, please visit the <a target="_blank"
                                                               href="https://datatables.net">official DataTables documentation</a>.
</p>

<!-- DataTales Example -->
<div class="card shadow px-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">DataTables Example</h6>
    </div>
       <a class="btn btn-success py-2" asp-action="Create">Create</a>
    <div class="card-body">

        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>No:</th>
                        <th>Name</th>
                        <th>Setting</th>

                    </tr>
                </thead>

                <tbody>

                    @foreach (Catagory item in Model)
                    {
                        <tr>
                            <td>@(++count)</td>
                            <td>@item.Name</td>
                            <td>
                          <div class="d-flex justify-content-around">
                                <a asp- controller="Category" asp-action="Detail" asp-route-id="@item.Id"><button class="btn btn-info"> Detail</button></a>
                                <form  asp-action="Update" asp-route-id="@item.Id">

                                <button class="btn btn-warning">Edit</button>

                                </form>
                                <form method="post" asp-action="Delete" asp-route-id="@item.Id">
                                    <button class="btn btn-danger">Delete</button>
                                </form>
                          </div>
                            </td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>
</div>